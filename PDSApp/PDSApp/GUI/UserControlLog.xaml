<UserControl x:Class="PDSApp.GUI.UserControlLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDSApp.GUI"
             mc:Ignorable="d">
    <StackPanel>
        <TextBox Name="txtLog" Height="412" Margin="20" Background="White" Foreground="Black" FontSize="15" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        <Button x:Name="BtnClear" Margin="20" Content="Clear" Background="#FF31577E" BorderThickness="1" HorizontalAlignment="Center" Width="400" Height="38" Click="Clear_Click"/>
    </StackPanel>
</UserControl>
