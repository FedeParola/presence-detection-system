<UserControl x:Class="PDSApp.GUI.UserControlStat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDSApp.GUI"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="641" d:DesignWidth="1188">

    <Grid Background="#FFEAEAEA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="830"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <lvc:CartesianChart Series="{Binding SeriesCollection}" Grid.Column="0" Width="811" HorizontalAlignment="Left" Name="frequenciesChart" Margin="10,10,0,9.8" Background="White">
            <lvc:CartesianChart.DataTooltip>
                <lvc:DefaultTooltip Background="DarkGray"/>
            </lvc:CartesianChart.DataTooltip>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Time" Labels="{Binding Labels}" LabelFormatter="{Binding DateTimeFormatter}"/>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis x:Name="yAxis" MinValue="0" LabelFormatter="{Binding YFormatter}"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <TabControl Grid.Column="1" HorizontalAlignment="Left" Height="605" Margin="0.2,10,-336,0" VerticalAlignment="Top" Width="343">
            <TabItem Header="Real-time stats" FontSize="14">
                <StackPanel>
                    <TextBlock Margin="10,20,10,0" HorizontalAlignment="center" TextAlignment="Center" FontSize="15" TextWrapping="Wrap" Text="Insert a time value of last 'x' minutes to show the live position of the devices"/>
                    <xctk:IntegerUpDown x:Name="timeIntervalPicker" Margin="0,20,0,0" Minimum="1" Value="5"  Height="35" Width="56" RenderTransformOrigin="-0.391,0.571"  HorizontalAlignment="Center"/>
                    <Button x:Name="applyRealTime" Content="Apply" Margin="0,20,0,0" HorizontalAlignment="center" Width="200"  Background="#FF31577E" BorderThickness="1" Height="38" Click="Real_Time_Button_Click"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Long term stats" FontSize="14">
                <StackPanel>
                    <TextBlock Margin="10,20,10,20" HorizontalAlignment="center" TextAlignment="Center" FontSize="15" TextWrapping="Wrap" Text="Insert the interval of time and number of devices to show"/>
                    <Label Content="Start time: " HorizontalAlignment="center"></Label>
                    <xctk:DateTimePicker x:Name="dtpStart" Format ="Custom" FormatString = "yyyy-MM-dd HH:mm:ss" Height="35" Width="155"/>
                    <Label Content="Stop time: " HorizontalAlignment="center"></Label>
                    <xctk:DateTimePicker x:Name="dtpStop" Format ="Custom" FormatString = "yyyy-MM-dd HH:mm:ss" Height="35" Width="155"/>
                    <Label Content="Number of devices: " HorizontalAlignment="center"></Label>
                    <xctk:IntegerUpDown Name="DevNumPickerCol" Minimum="1" Value="1"  Height="35" Width="56" RenderTransformOrigin="-0.391,0.571" />
                    <Button x:Name="applyLongTerm" Content="Apply" Margin="0,20,0,0" HorizontalAlignment="center" Width="200"  Background="#FF31577E" BorderThickness="1" Height="38" Click="Button_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
